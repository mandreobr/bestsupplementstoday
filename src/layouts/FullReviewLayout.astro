---
interface Props {
  title: string;
  description: string;
  heroImage?: string;
  heroAlt?: string;
  heroCaption?: string;
  primaryCtaLabel?: string;
  primaryCtaUrl?: string;
}

const {
  title,
  description,
  heroImage,
  heroAlt = `Product image for ${title}`,
  heroCaption,
  primaryCtaLabel,
  primaryCtaUrl,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="icon" href="/favicon-bst.png" type="image/png" sizes="32x32" />

  <!-- Tailwind via CDN + fonte Inter -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: "Inter", sans-serif;
      color: #1f2937;
      background-color: #f3f4f6;
    }

    .text-primary { color: #2563eb; }
    .border-primary { border-color: #2563eb; }

    .review-shell {
      max-width: 960px;
      margin: 0 auto;
      padding: 2rem 1rem 3rem;
    }

    .review-card {
      background-color: #ffffff;
      border-radius: 1.25rem;
      box-shadow: 0 20px 45px rgba(15, 23, 42, 0.12);
      padding: 2.5rem 1.5rem;
    }

    @media (min-width: 768px) {
      .review-card {
        padding: 3.5rem 3rem;
      }
    }

    .markdown-prose {
      padding: 1rem 0;
    }

    /* texto principal JUSTIFICADO – igual Prostadine */
    .markdown-prose p:not(.image-caption) {
      margin-bottom: 1.5rem;
      font-size: 1.0625rem;
      line-height: 1.8;
      text-align: justify;
    }

    .markdown-prose h2 {
      font-size: 1.9rem;
      font-weight: 800;
      color: #111827;
      margin-top: 3rem;
      margin-bottom: 1.25rem;
      padding-bottom: 0.4rem;
      border-bottom: 3px solid #2563eb; /* linha azul separadora */
    }

    .markdown-prose h3 {
      font-size: 1.35rem;
      font-weight: 700;
      margin-top: 2.25rem;
      margin-bottom: 0.9rem;
      color: #111827;
    }

    .markdown-prose ul,
    .markdown-prose ol {
      padding-left: 1.3rem;
      margin-bottom: 1.5rem;
      font-size: 1.02rem;
    }
    .markdown-prose ul { list-style: disc; }
    .markdown-prose ol { list-style: decimal; }
    .markdown-prose ul li,
    .markdown-prose ol li {
      margin-bottom: 0.4rem;
    }

    .intro-box {
      padding: 1.3rem 1.5rem;
      background-color: #eff6ff;
      border-left: 5px solid #2563eb;
      border-radius: 0 0.9rem 0.9rem 0;
      margin-bottom: 2rem;
      font-style: italic;
      font-weight: 500;
      font-size: 1.03rem;
      line-height: 1.7;
      text-align: justify;
    }

    /* CTA genérico – estiliza QUALQUER link da Linkly como botão centralizado */
    .markdown-prose p a[href*="linkly.link"] {
      display: inline-block;
      margin-top: 0.5rem;
      padding: 0.95rem 2.75rem;
      background-color: #2563eb;
      color: #ffffff;
      font-weight: 800;
      border-radius: 0.9rem;
      text-decoration: none;
      box-shadow: 0 12px 25px rgba(37, 99, 235, 0.45);
      transition: all 0.25s ease;
    }

    .markdown-prose p a[href*="linkly.link"]:hover {
      background-color: #1d4ed8;
      transform: translateY(-1px);
      box-shadow: 0 18px 35px rgba(37, 99, 235, 0.6);
    }

    /* centraliza o parágrafo que contém o botão */
    .markdown-prose p:has(a[href*="linkly.link"]) {
      text-align: center;
    }

    /* imagens dentro do conteúdo – proporcionais e centralizadas */
    .markdown-prose img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 1.75rem auto 0.5rem;
    }

    /* trata parágrafo com <em> sozinho logo após imagem como CAPTION */
    .markdown-prose p > em:only-child {
      display: block;
      font-size: 0.8rem;
      color: #6b7280;
      margin-top: 0.25rem;
      text-align: center;
      font-style: italic;
    }

    /* bloco Pros & Cons se você usar divs com essas classes no markdown (opcional) */
    .pros-cons-title {
      margin-top: 3rem;
      margin-bottom: 0.75rem;
      font-size: 1.9rem;
      font-weight: 800;
      color: #111827;
      border-bottom: 3px solid #2563eb;
      padding-bottom: 0.4rem;
    }

    .pros-cons-block {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.75rem;
      margin: 1.75rem 0 2.5rem;
    }
    @media (min-width: 768px) {
      .pros-cons-block {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    .pros-cons-block .pros,
    .pros-cons-block .cons {
      padding: 1.5rem 1.4rem;
      border-radius: 0.75rem;
      box-shadow: 0 6px 16px rgba(15, 23, 42, 0.06);
      border: 1px solid #e5e7eb;
    }
    .pros-cons-block .pros {
      background-color: #ecfdf3;
      border-left: 4px solid #16a34a;
    }
    .pros-cons-block .cons {
      background-color: #fef2f2;
      border-left: 4px solid #ef4444;
    }
    .pros-cons-block h3 {
      margin-top: 0 !important;
      margin-bottom: 0.7rem;
    }
    .pros-cons-block ul li {
      margin-bottom: 0.7rem;
      line-height: 1.65;
    }

    /* tabela de preços – se você usar <table> no markdown */
    .pricing-table-container {
      overflow-x: auto;
      margin-top: 2.25rem;
      margin-bottom: 2.25rem;
      border-radius: 1rem;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
      border: 1px solid #e5e7eb;
    }
    .pricing-table {
      width: 100%;
      border-collapse: collapse;
      min-width: 650px;
      background-color: #ffffff;
    }
    .pricing-table th,
    .pricing-table td {
      padding: 0.75rem 1rem;
      text-align: center;
      font-size: 0.95rem;
      border-bottom: 1px dashed #e5e7eb;
      vertical-align: middle;
    }
    .pricing-table thead th {
      background-color: #f9fafb;
      font-weight: 700;
      border-bottom: 2px solid #e5e7eb;
    }
    .pricing-table thead .best-value-header {
      padding-top: 0.35rem;
      padding-bottom: 0.35rem;
    }
    .pricing-table .row-label {
      text-align: left;
      font-weight: 600;
      color: #111827;
    }
    .pricing-table .bold-black {
      font-weight: 700;
      color: #000000;
    }
    .pricing-table .best-value-col {
      background-color: #eff6ff;
    }

    /* imagens do HERO com proporção igual ao Prostadine */
    .hero-image {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      border-radius: 0;
      box-shadow: none;
      border: none;
      object-fit: contain;
      background-color: transparent;
      max-height: 340px;
    }

    .tag-container {
      margin-top: 2.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e5e7eb;
    }
    .tag-item {
      display: inline-block;
      background-color: #f3f4f6;
      color: #4b5563;
      padding: 0.25rem 0.85rem;
      border-radius: 9999px;
      font-size: 0.86rem;
      margin: 0.25rem;
      border: 1px solid #e5e7eb;
      white-space: nowrap;
    }

    /* HEADER estilo site */
    .site-header {
      background-color: #ffffff;
      border-bottom: 1px solid #e5e7eb;
      box-shadow: 0 2px 8px rgba(15, 23, 42, 0.04);
    }
    .site-header-inner {
      max-width: 1120px;
      margin: 0 auto;
      padding: 1rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .site-logo {
      font-size: 1.1rem;
      font-weight: 800;
      letter-spacing: 0.08em;
      color: #2563eb;
      text-transform: uppercase;
      text-decoration: none;
    }
    .site-nav {
      display: flex;
      gap: 1.5rem;
      font-size: 0.95rem;
      font-weight: 500;
    }
    .site-nav a {
      color: #4b5563;
      text-decoration: none;
    }
    .site-nav a:hover {
      color: #2563eb;
    }
  </style>
</head>

<body class="min-h-screen flex flex-col antialiased">
  <!-- HEADER -->
  <header class="site-header">
    <div class="site-header-inner">
      <a href="/" class="site-logo">
        BEST SUPPLEMENTS TODAY
      </a>
      <nav class="site-nav">
        <a href="/">Home</a>
        <a href="/reviews">Reviews</a>
      </nav>
    </div>
  </header>

  <main class="flex-grow">
    <div class="review-shell">
      <article class="review-card">
        <!-- HERO -->
        <header class="mb-10 text-center">
          <h1
            class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-gray-900 mb-4 leading-tight"
          >
            {title}
          </h1>

          <p class="text-lg md:text-xl text-gray-600 font-medium mb-8">
            {description}
          </p>

          {heroImage && (
            <div class="my-6 flex flex-col items-center">
              {primaryCtaUrl ? (
                <a href={primaryCtaUrl} target="_blank" rel="noopener noreferrer">
                  <img src={heroImage} alt={heroAlt} class="hero-image" />
                </a>
              ) : (
                <img src={heroImage} alt={heroAlt} class="hero-image" />
              )}

              {heroCaption && (
                <p class="image-caption">
                  {heroCaption}
                </p>
              )}
            </div>
          )}
        </header>

        <!-- CONTEÚDO DO REVIEW VINDO DO .MD -->
        <section class="markdown-prose">
          <slot />
        </section>
      </article>
    </div>

    {primaryCtaUrl && primaryCtaLabel && (
      <section class="bg-[#2563eb] text-white mt-8">
        <div class="max-w-5xl mx-auto px-4 py-8 text-center">
          <h3 class="text-2xl md:text-3xl font-extrabold mb-4">
            {primaryCtaLabel}
          </h3>
          <a
            href={primaryCtaUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block py-3 px-10 bg-[#1d4ed8] text-white text-lg font-extrabold rounded-full shadow-2xl transition duration-300 transform hover:scale-105 hover:bg-[#1e40af]"
            style="border: 2px solid white;"
          >
            VISIT OFFICIAL WEBSITE NOW
          </a>
        </div>
      </section>
    )}
  </main>

  <footer class="bg-gray-800 text-white py-6 mt-12">
    <div class="max-w-5xl mx-auto px-4 text-center text-sm">
      <p>&copy; {new Date().getFullYear()} Best Supplements Today. All rights reserved.</p>
      <div class="mt-2 space-x-4">
        <a href="/privacy" class="hover:text-[#2563eb]">Privacy Policy</a>
        <a href="/terms" class="hover:text-[#2563eb]">Terms of Use</a>
      </div>
    </div>
  </footer>

  {primaryCtaUrl && primaryCtaLabel && (
    <div
      class="fixed bottom-0 left-0 right-0 p-4 bg-white shadow-[0_-5px_15px_rgba(0,0,0,0.1)] z-20 md:hidden"
    >
      <a
        href={primaryCtaUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full text-center py-3 text-lg font-extrabold bg-[#2563eb] text-white rounded-lg shadow-xl transition duration-300 transform hover:scale-[1.02] active:scale-95"
      >
        See Official Discounts
      </a>
    </div>
  )}
</body>
</html>
