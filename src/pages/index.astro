---
import { getCollection } from 'astro:content';
import { CATEGORY_CONFIG } from '../config/categories';

const reviews = await getCollection('reviews');

// Categorias que já têm pelo menos 1 review
const categoriesInUse = Object.entries(CATEGORY_CONFIG).filter(
  ([label]) => reviews.some((r) => r.data.category === label)
);

// Imagens do carrossel (rodapé horizontal)
const carouselImages = [
  { src: '/omega-softgels.jpg', alt: 'Omega-3 softgels spilling from a jar' },
  { src: '/barbell-gym.jpg', alt: 'Athlete holding barbell at the gym' },
  { src: '/woman-plank.jpg', alt: 'Woman exercising on the beach' },
  { src: '/supplements-yellow.jpg', alt: 'Supplements on a yellow background' },
  { src: '/back-muscles.jpg', alt: 'Back muscles of a fit woman at the gym' }
];

// Duplicamos o array para dar efeito de loop contínuo no carrossel
const scrollingImages = [...carouselImages, ...carouselImages];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Best Supplements Today — Expert Supplement Reviews</title>
    <meta
      name="description"
      content="With BestSupplementsToday you compare the best supplements for every health goal — with expert reviews organized by health category."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href="https://bestsupplementstoday.com/" />

    <!-- Favicon global do site -->
    <link rel="icon" href="/favicon-bst.png" type="image/png" sizes="32x32" />

    <style>
      :root {
        --accent: #0ea5e9;
        --accent-soft: #e0f2fe;
        --text-main: #0f172a;
        --text-muted: #64748b;
        --border-subtle: #e5e7eb;
        --max-width: 980px;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: #ffffff; /* fundo branco em toda a página */
        color: var(--text-main);
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* HEADER (fundo branco, igual full review) */

      header {
        border-bottom: 1px solid var(--border-subtle);
        background: #ffffff;
        position: sticky;
        top: 0;
        z-index: 20;
      }

      .header-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 10px 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logo-wrap {
        display: flex;
        align-items: center;
      }

      .logo-img {
        height: 32px;
      }

      nav {
        display: flex;
        align-items: center;
        gap: 22px;
        font-size: 14px;
        color: var(--text-muted);
      }

      .nav-link {
        position: relative;
        padding: 4px 0;
      }

      .nav-link:hover {
        color: var(--text-main);
      }

      /* Dropdown de categorias em All Reviews */

      .nav-dropdown {
        position: relative;
      }

      .nav-dropdown-toggle {
        display: inline-flex;
        align-items: center;
        gap: 4px;
      }

      .nav-dropdown-toggle-icon {
        font-size: 10px;
      }

      .dropdown-menu {
        position: absolute;
        top: 110%;
        right: 0;
        min-width: 260px;
        background: #ffffff;
        border-radius: 10px;
        border: 1px solid var(--border-subtle);
        box-shadow: 0 14px 40px rgba(15, 23, 42, 0.15);
        padding: 8px 8px 6px;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2px;
        opacity: 0;
        pointer-events: none;
        transform: translateY(4px);
        transition: opacity 0.15s ease-out, transform 0.15s ease-out;
        z-index: 30;
      }

      .nav-dropdown:hover .dropdown-menu {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
      }

      .dropdown-title {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--text-muted);
        padding: 4px 4px 6px;
      }

      .dropdown-item {
        font-size: 13px;
        padding: 5px 6px;
        border-radius: 8px;
        color: var(--text-main);
      }

      .dropdown-item:hover {
        background: #f3f4f6;
      }

      /* MAIN (mesma largura visual do full review) */

      main {
        flex: 1;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 28px 16px 40px;
      }

      .hero {
        text-align: center;
        margin-bottom: 26px;
      }

      .pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 12px;
        border-radius: 999px;
        background: var(--accent-soft);
        color: #0369a1;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        margin-bottom: 10px;
      }

      .pill-dot {
        width: 6px;
        height: 6px;
        border-radius: 999px;
        background: var(--accent);
      }

      .hero h1 {
        font-size: 28px;
        line-height: 1.2;
        margin: 8px 0 10px;
      }

      @media (min-width: 768px) {
        .hero h1 {
          font-size: 32px;
        }
      }

      .hero-sub {
        max-width: 640px;
        margin: 0 auto;
        font-size: 15px;
        color: var(--text-muted);
      }

      /* BLOCO INTRODUTÓRIO */

      .intro-text {
        max-width: 780px;
        margin: 24px auto 30px;
        font-size: 14px;
        color: var(--text-muted);
        line-height: 1.6;
      }

      .intro-text h2 {
        font-size: 18px;
        margin: 0 0 8px;
        color: var(--text-main);
        text-align: left;
      }

      .intro-text p {
        margin: 6px 0;
        text-align: left;
      }

      .intro-text strong {
        color: var(--text-main);
      }

      /* CATEGORIAS EM GRID */

      .section-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin: 8px 0 14px;
      }

      .section-header h2 {
        font-size: 18px;
        margin: 0;
      }

      .section-header p {
        margin: 0;
        font-size: 13px;
        color: var(--text-muted);
      }

      .categories-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 10px;
      }

      @media (min-width: 700px) {
        .categories-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      .category-card {
        border-radius: 10px;
        border: 1px solid var(--border-subtle);
        padding: 10px 12px;
        display: flex;
        flex-direction: column;
        gap: 3px;
        font-size: 13px;
      }

      .category-name {
        font-size: 14px;
        font-weight: 600;
      }

      .category-desc {
        font-size: 12px;
        color: var(--text-muted);
      }

      .category-footer {
        font-size: 11px;
        color: var(--text-muted);
        margin-top: 4px;
        display: flex;
        justify-content: space-between;
      }

      .category-card:hover {
        border-color: var(--accent);
      }

      /* CARROSSEL HORIZONTAL NO RODAPÉ DA PÁGINA */

      .carousel-strip {
        margin-top: 40px;
        border-top: 1px solid var(--border-subtle);
        border-bottom: 1px solid var(--border-subtle);
        padding: 14px 0;
        overflow: hidden;
      }

      .carousel-title {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.16em;
        color: var(--text-muted);
        margin-bottom: 8px;
      }

      .carousel-viewport {
        width: 100%;
        overflow: hidden;
      }

      .carousel-track {
        display: flex;
        align-items: center;
        gap: 18px;
        animation: scroll-strip 32s linear infinite;
      }

      .carousel-item {
        flex: 0 0 auto;
        width: 180px;
        height: 90px;
        border-radius: 10px;
        overflow: hidden;
      }

      .carousel-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      @keyframes scroll-strip {
        from {
          transform: translateX(0);
        }
        to {
          transform: translateX(-50%);
        }
      }

      /* FOOTER */

      footer {
        font-size: 11px;
        color: var(--text-muted);
      }

      .footer-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 10px 16px 18px;
        display: flex;
        justify-content: space-between;
        gap: 8px;
        flex-wrap: wrap;
        border-top: 1px solid var(--border-subtle);
        margin-top: 18px;
      }
    </style>
  </head>

  <body>
    <div class="page">
      <header>
        <div class="header-inner">
          <a href="/" class="logo-wrap">
            <img src="/logo-bst.png" alt="Best Supplements Today" class="logo-img" />
          </a>

          <nav>
            <a href="/" class="nav-link">Home</a>

            <div class="nav-link nav-dropdown">
              <a href="/reviews" class="nav-dropdown-toggle">
                <span>All Reviews</span>
                <span class="nav-dropdown-toggle-icon">▾</span>
              </a>
              {categoriesInUse.length > 0 && (
                <div class="dropdown-menu">
                  <div class="dropdown-title">Browse by category</div>
                  {categoriesInUse.map(([label, config]) => (
                    <a href={`/categories/${config.slug}`} class="dropdown-item">
                      <div>{label}</div>
                    </a>
                  ))}
                </div>
              )}
            </div>
          </nav>
        </div>
      </header>

      <main>
        <!-- HERO -->
        <section class="hero">
          <div class="pill">
            <span class="pill-dot"></span>
            Evidence-based supplement hub
          </div>
          <h1>Explore supplement reviews by category</h1>
          <p class="hero-sub">
            Navigate by health goal — from weight loss and brain support to
            circulation, liver, dental care, men’s and women’s health.
          </p>
        </section>

        <!-- TEXTO INTRODUTÓRIO -->
        <section class="intro-text">
          <h2>With BestSupplementsToday you compare the best supplements for every health goal</h2>
          <p>
            At <strong>BestSupplementsToday.com</strong>, we review and compare
            the best supplements across every major health category — from
            Weight Loss, Men’s &amp; Women’s Health, and Heart &amp; Circulation
            to Liver, Gut, Dental, Hearing, and Brain Health.
          </p>
          <p>
            Our editorial team researches <strong>ingredient quality</strong>,
            <strong> scientific evidence</strong>, and <strong>real user results</strong>
            to deliver honest supplement reviews you can trust.
          </p>
          <p>
            Each product is independently analyzed for safety, effectiveness, and
            value — helping you find the top-rated supplements that truly match
            your goals.
          </p>
        </section>

        <!-- CATEGORIAS EM GRID -->
        <section>
          <div class="section-header">
            <h2>Browse by health category</h2>
            <p>Select a category to see all supplement reviews related to that area.</p>
          </div>

          {categoriesInUse.length === 0 ? (
            <p style="font-size: 13px; color: var(--text-muted);">
              As you add more reviews with a <code>category</code> field in the
              frontmatter, they will appear here automatically.
            </p>
          ) : (
            <div class="categories-grid">
              {categoriesInUse.map(([label, config]) => (
                <a href={`/categories/${config.slug}`} class="category-card">
                  <div class="category-name">{label}</div>
                  <div class="category-desc">{config.description}</div>
                  <div class="category-footer">
                    <span>View related reviews</span>
                    <span>›</span>
                  </div>
                </a>
              ))}
            </div>
          )}
        </section>

        <!-- CARROSSEL HORIZONTAL NO RODAPÉ DA PÁGINA -->
        <section class="carousel-strip">
          <div class="carousel-title">Health &amp; lifestyle snapshots</div>
          <div class="carousel-viewport">
            <div class="carousel-track">
              {scrollingImages.map((img) => (
                <div class="carousel-item">
                  <img src={img.src} alt={img.alt} loading="lazy" />
                </div>
              ))}
            </div>
          </div>
        </section>
      </main>

      <footer>
        <div class="footer-inner">
          <span>© {new Date().getFullYear()} Best Supplements Today</span>
          <span>Independent supplement reviews &amp; analysis</span>
        </div>
      </footer>
    </div>
  </body>
</html>


